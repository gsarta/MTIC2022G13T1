@page
@model MascotaFeliz.App.Frontend.Pages.EditarMascotasModel
@{
}

<link rel="stylesheet" href="~/css/style.css">
<link rel="stylesheet" href="~/css/form.css">

<div class="contenedor-principal">

    <form method="post">
        <h3>Edicion o Creacion de Mascotas</h3> 
        <div class="contenedor">
            <input type="hidden" asp-for = "mascota.Id">
            <input asp-for="mascota.Nombre" placeholder="Nombre">
            <input asp-for="mascota.Color" placeholder="Color">
            <input asp-for="mascota.Especie" placeholder="Especie">
            <input asp-for="mascota.Raza" placeholder="Raza">


            <select id="dueno" asp-for="mascota.Dueno.Id" name = "duenoId" class="select">
                <option value="0">Seleccione un Dueño</option>
                @foreach (var dueno in Model.listaDuenos)
                {
                    <option value="@dueno.Id"> @dueno.Nombres @dueno.Apellidos</option>
                }
            </select>


            <select id="veterinario" asp-for="mascota.Veterinario.Id" name = "veterinarioId" class="select">
                <option value="0">Seleccione un Veterinario</option>
                @foreach (var veterinario in Model.listaVeterinarios)
                {
                    <option value="@veterinario.Id">@veterinario.Nombres @veterinario.Apellidos</option>
                }
            </select>


            <div class="contenedor-botones">
                <button type="submit" class="boton">Guardar</button>
                <button class="boton" type="button"><a asp-page="./ListaMascotas">Lista de Mascotas</a></button>
            </div>

        </div>
    </form>

    <div class="contenedor-img">
        <img src="../img/gatoYPerro.png" alt="Gato y perro" class="img-mascota">
    </div>
</div>
