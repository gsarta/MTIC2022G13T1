@page
@model MascotaFeliz.App.Frontend.Pages.ListaDuenosModel
@{
}
<link rel="stylesheet" href="~/css/listaDueno.css">
<link rel="stylesheet" href="~/css/style.css">
<link rel="stylesheet" href="~/css/table.css">

<h3>Lista de Propietarios</h3>

<div class="contenedor-principal">

    <table class="content-table">

        <thead>
            <tr>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Dirección</th>
                <th>Telefono</th>
                <th>Correo</th>
                <th>Detalle</th>
                <th>Editar</th>
            </tr>
        </thead>

        <tbody>
            @foreach(var dueno in Model.listaDuenos)
            {
                <tr>

                    <td>@dueno.Nombres</td>
                    <td>@dueno.Apellidos</td>
                    <td>@dueno.Direccion</td>
                    <td>@dueno.Telefono</td>
                    <td>@dueno.Correo</td>

                    <td>
                        <a asp-page="./DetallesMascotas" asp-route-duenoId="@dueno.Id"><img src="../img/persona.png"></a>
                    </td>

                    <td>
                        <a asp-page="./EditarMascotas" asp-route-duenoId="@dueno.Id"><img src="../img/lapiz.png"></a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
    <div class="contenedor-botones">
        <a asp-page="./EditarDuenos" class="boton"> Adicionar Dueño </a>
    </div>
</div>